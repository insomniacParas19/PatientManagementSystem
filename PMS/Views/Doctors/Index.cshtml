@model IEnumerable<Doctor>

@{
    ViewData["Title"] = "Index";
    <link rel="stylesheet" href="~/css/table.css" asp-append-version="true" />
}
<div class="container-fluid py-4">

    <p>
        <h3 class="float-start">Doctors</h3>

        <a asp-action="Create" class="btn float-end ">Add Doctor</a>

    </p>
</div>
<table class="content-table">
    <thead class="table-primary">
        <tr class="active-row">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credentials)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr >
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specialist)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credentials)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i href=""
                            class="bi bi-pencil-square text-warning"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><i href="" class="bi bi-info-circle text-info"></i></a>
                    |
                    <a asp-action="Delete" asp-route-id="@item.Id"> <i href=""
                            class="bi bi-trash3-fill text-danger"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
