@model IEnumerable<Doctor>

@{
    ViewData["Title"] = "Index";
}
<div class="container-fluid py-4">

    <p>
        <h2 class="float-start">Doctors</h2>

        <a asp-action="Create" class="btn btn-success float-end ">Add Doctor</a>

    </p>
</div>
<table class="table table-info py-3 table-bordered table-hover">
    <thead >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credentials)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specialist)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credentials)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i href=""
                            class="bi bi-pencil-square text-warning"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><i href="" class="bi bi-info-circle text-info"></i></a>
                    |
                    <a asp-action="Delete" asp-route-id="@item.Id"> <i href=""
                            class="bi bi-trash3-fill text-danger"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
